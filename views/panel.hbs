<div class="message j-message-box">

</div>
<div class="modal modal--createRent j-modal-create">
  <div class="modal-content">
    <form action="" class="form-createRent j-form-createRent">
      <div class="form-pair">
        <label for="car">Car</label>
        <select name="car" id="car">
          <option disabled selected value="">Select a car</option>
        </select>
      </div>
      <div class="form-pair">
        <label for="client">Client</label>
        <select name="client" id="client" required>
          <option disabled selected value="">Select a client</option>
        </select>
      </div>
      <div class="form-pair">
        <label for="creationDate">Creation Date</label>
        <input type="text" name="creationDate" id="creationDate" readonly required>
      </div>
      <div class="form-pair">
        <label for="returnDate">Return Date</label>
        <input type="date" name="returnDate" id="returnDate" required>
      </div>
      <div class="form-pair">
        <label for="createdBy">Created By</label>
        <select name="createdBy" id="createdBy" readonly required disabled>
          <option value="{{user}}">{{user_name}}</option>
        </select>
      </div>
      
      <button class="btn j-saveRental" type="submit">Create</button>
    </form>
  </div>
</div>
<div class="panel">
{{#if approved_user}}
  <div class="side-menu">
    <ul>
      <li>
        <a href="/panel/cars">Cars</a>
      </li>
      <li>
        <a href="/panel/clients">Clients</a>
      </li>
      <li>
        <button class="btn btn-createRental j-createRental">Create Rental</button>
      </li>
    </ul>
  </div>
  <div class="content">
    <div class="panel-dashboard j-panelDashboard">
      {{#each cars}}
        <div class="card" data-carnumber="{{id}}">
          {{#if image_name}}
          <img src="/{{image_name}}" alt="">
          {{else}}
          No image
          {{/if}}
          <h3 class="car_model">
            {{model}}
          </h3>
          <p class="car_year">
            Year: <span>{{year}}</span>
          </p>
          <p class="car_kilometers">
            Kilometers: <span>{{kilometers}}</span>
          </p>
          <div class="car_availability {{status}}">
            {{status}}
          </div>
          <div class="delete-car j-delete-car {{status}}">
            Delete Car
          </div>
        </div>
      {{/each}}
    </div>
  </div>
{{else}}
  <div class="dashboard__message">
    <h2 class="title">
      Hello {{user_name}}
    </h2>
    <div class="text">
      {{#if denied_user}}
        Your registration has been denied. If you think this is a mistake, please send an email to ee@nope.com
      {{else}}
        Your registration is being evaluated by an administrator. Please wait a little bit.
      {{/if}}
    </div>
  </div>
{{/if}}
</div>
<script src="../js/panel.js"></script>