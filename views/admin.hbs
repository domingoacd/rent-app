<div class="admin row d-flex justify-content-center align-items-center">
  {{#if error}}
    <div class="message error show">
      {{#if unknown_error}}
        Try again! There have been an error.
      {{else}}
        Wrong user/password.
      {{/if}}
    </div>
  {{/if}}
  <form action="" class="admin-form col-10 col-md-8 d-flex flex-column justify-content-center align-items-center" method="POST">
    <div class="form-group d-flex flex-column">
      <label for="username">User</label>
      <input type="text" name="username" required>
    </div>
    <div class="form-group d-flex flex-column">
      <label for="password">Password</label>
      <input type="password" name="password" required>
    </div>
    <button class="btn btn--admin" type="submit">Log in</button>
  </form>
</div>